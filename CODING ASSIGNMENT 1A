package myScanner;
import java.util.Scanner;
public class Assignment1A {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		double no1, no2, no3, total1, total2, total3;
		
		
		Scanner scan = new Scanner (System.in);
		
		System.out.println("Enter the yearly interest rate: ");
		no1 = scan.nextDouble();
		
		System.out.println("Enter the number of years as an integer: ");
		no2 = scan.nextDouble();
		
		System.out.println("Enter the loan amount: ");
		no3 = scan.nextDouble();
		
		total1 = ((no1/100)*no3)*no2;
		System.out.printf("The sum of interest is: %.2f" , total1);
		
		total2 = (no1/100)*no3;
		System.out.printf("\nThe monthly payment is: %.2f " , total2);
		
		total3 = total2*(no2*12);
		System.out.printf("\nThe total payment is: %.2f " , total3);	
				
	}

}
